<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraIMC.MainPage"
             BackgroundColor="Bisque"
             Visual="Material"
             >

    <StackLayout VerticalOptions="Center"
                 HorizontalOptions="Center"
                 WidthRequest="250">
        <Label Text="Calcula tu IMC" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" TextColor="HotPink" FontSize="50" FontAttributes="Bold"/>
        <Entry Placeholder="Introduce tu Altura" x:Name="Altura"
               Keyboard="Numeric" />
        <Entry Placeholder="Introduce tu Peso" x:Name="Peso"
               Keyboard="Numeric"/>
        <Entry Placeholder="Tu IMC" x:Name="IMC"
               IsEnabled="False"/>
        <Button Text="Calcular" Clicked="Button_Clicked" TextColor="AntiqueWhite"  BackgroundColor="LightCoral"/>
    </StackLayout>

</ContentPage>
